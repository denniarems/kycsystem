<link rel="stylesheet" href="/stylesheets/police.css">
{{> inav }}
<div class="container">
<table class="table table-hover table-inverse table-responsive ">
    <thead class="thead-inverse">
        <tr>
            <th>Name</th>
            <th>Mobile</th>
            <th>Address</th>
            <th>Details</th>
        </tr>
        </thead>
        <tbody>
            {{#listings}}
            <tr>
                <td scope="row">{{name}}</td>
                <td>{{mobile}}</td>
                <td>{{address}}</td>
                <td>
                    <!-- Button trigger modal -->
                    <button class="btn-large btn-warning" data-toggle="modal" data-target="#decryptKey" data-state="{{stateAddress}}" >More</button>
                </td>
            </tr>
            {{/listings}}

        </tbody>
</table>
</div>
{{> footer }}

   <!-- Modal -->
   <div class="modal fade" id="decryptKey" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
       <div class="modal-dialog" role="document">
           <div class="modal-content">
                   <div class="modal-header">
                           <h5 class="modal-title">Enter the Decryption Key</h5>
                               <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                   <span aria-hidden="true">&times;</span>
                               </button>
                       </div>
               <div class="modal-body">
                   <div class="container-fluid">
                      Decryption Key : <input type="password" name="deKey" id="deKey">
                    <button id="decrypt" data-dismiss="modal" data-toggle="modal" 
                        onclick="checkDeKey(event)" class="btn-danger">Decrypt Data</button>
                   </div>
               </div>
               <div class="modal-footer">
                   <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
               </div>
           </div>
       </div>
   </div>
   <div class="modal fade" id="moreData" tabindex="1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
       <div class="modal-dialog" role="document">
           <div class="modal-content">
                   <div class="modal-header">
                           <h6 class="modal-title">User Details</h6>
                               <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                   <span aria-hidden="true">&times;</span>
                               </button>
                       </div>
               <div class="modal-body">
                   <div class="container">
                       <div style="display:flex; flex-direction: row; align-items: center">
                        <label> Name : </label> <h6 id="name"></h6>
                        </div>
                        <div  style="display:flex; flex-direction: row; align-items: center">
                        <label> Email : </label>  <h6 id="email"></h6>
                        </div>
                        <div style="display:flex; flex-direction: row; align-items: center">
                        <label> Date of Birth : </label>  <h6 id="dob"></h6>
                        </div>
                        <div style="display:flex; flex-direction: row; align-items: center">
                        <label> Address : </label>  <h6 id="address"></h6>
                        </div>
                        <div style="display:flex; flex-direction: row; align-items: center">
                        <label> Mobile : </label>  <h6 id="mobile"></h6>
                        </div>
                        <div style="display:flex; flex-direction: row; align-items: center">
                        <label > Pincode : </label>  <h6 id="pincode"></h6>
                        </div>
                        <div style="display:flex; flex-direction: row; align-items: center">
                        <label> Aadhar : </label>  <h6 id="aadhar"></h6>
                        </div>
                        <div style="display:flex; flex-direction: row; align-items: center">
                        <label> Voter : </label>  <h6 id="voter"></h6>
                        </div>
                        <div style="display:flex; flex-direction: row; align-items: center">
                        <label > Public Key : </label>  <h6 id="pub_key"></h6>
                        </div>
                       {{!-- Name : <h6 id="name"></h6>
                       Email : <p id="email"></p>
                       Date of Birth : <p id="dob"></p>
                       Address :<p id="address"></p>
                       Mobile :<p id="mobile"></p>
                       Pincode :<p id="pincode"></p>
                       Aadhar Id :<p id="aadhar"></p>
                       Voter id :<p id="voter"></p>
                       Public Key :<p id="pub_key"></p> --}}
                   </div>
               </div>
               <div class="modal-footer">         
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="ModalAccept" class="btn-success" >Accept</button>
                <button id="ModalReject" class="btn-danger" >Reject</button >
               </div>  
           </div>
       </div>
   </div>
   
 <script src="/javascripts/police.js"></script>